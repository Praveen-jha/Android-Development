<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/welcome_to_jiet_college"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/img1"
                        android:padding="7dp"
                        app:srcCompat="@drawable/img11" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/img1"
                        android:padding="7dp"
                        app:srcCompat="@drawable/img9" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/img1"
                        android:padding="7dp"
                        app:srcCompat="@drawable/img8" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/img1"
                        android:padding="7dp"
                        app:srcCompat="@drawable/img7" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/img1"
                        android:padding="7dp"
                        app:srcCompat="@drawable/img2" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/img1"
                        android:padding="7dp"
                        app:srcCompat="@drawable/img4" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/img1"
                        android:padding="7dp"
                        app:srcCompat="@drawable/img1" />

                    <Button
                        android:id="@+id/viewMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="@string/view_more"
                        android:textSize="15sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/jietweb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="@string/go_to_jiet_official_website" />

            <TextView
                android:id="@+id/department_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:text="@string/description_of_departments"
                android:textColor="#FFFF0000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/textview"
                android:textColor="@color/design_default_color_primary"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/cse1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/computer_science_and_engineering"
                android:textColor="@color/design_default_color_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="350dp"
                android:layout_height="173dp"
                android:contentDescription="@string/pic_of_cse"
                app:srcCompat="@drawable/img2" />

            <TextView
                android:id="@+id/cse2show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="8dp"
                android:text="@string/cse2show"
                android:textSize="18sp" />

            <Button
                android:id="@+id/readMore1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/read_more" />

            <TextView
                android:id="@+id/eee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/eee"
                android:textColor="@color/design_default_color_primary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="402dp"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/eee_show_pic"
                app:srcCompat="@drawable/img3" />

            <TextView
                android:id="@+id/eee1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="8dp"
                android:text="@string/eee1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/readMore2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/read_more" />

            <TextView
                android:id="@+id/civil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/civil1"
                android:textColor="@color/design_default_color_primary"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/civil_img"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/img_of_civil"
                app:srcCompat="@drawable/civil" />

            <TextView
                android:id="@+id/civil_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="8dp"
                android:text="@string/civil_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/readMore3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/read_more" />

            <TextView
                android:id="@+id/ece_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="@string/ece_text"
                android:textColor="@color/design_default_color_primary"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/ece_img"
                android:padding="5dp"
                app:srcCompat="@drawable/ece" />

            <TextView
                android:id="@+id/ece_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:paddingBottom="8dp"
                android:text="@string/ecetext"
                android:textSize="18sp" />

            <Button
                android:id="@+id/readMore4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/read_more" />

            <ImageView
                android:id="@+id/thank_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                android:contentDescription="@string/thank_img"
                app:srcCompat="@drawable/thank" />

            <!--            <Button-->
            <!--                android:id="@+id/form"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/click_for_feedback" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/thank_txt"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:textColor="@color/design_default_color_primary"-->
            <!--                android:textSize="20sp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/thank_text" />-->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>